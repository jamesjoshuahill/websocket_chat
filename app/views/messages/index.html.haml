- if current_user
  #new_message_form
    %h3 New message
    = render 'form'
  %table#messages_container
    %thead
      %tr
        %th.column.name Name
        %th.column.content Message
        %th.column.eviscerate
    %tbody#messages
      - @messages.each do |message|
        %tr
          %td= message.name
          %td= message.content
          %td= link_to 'Eviscerate', message, method: :delete, data: { confirm: 'You are sure.' }
